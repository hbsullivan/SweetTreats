@{
  Layout = "_Layout";
}

@model SweetTreats.Models.Treat
@using SweetTreats.Models

<h2>Treat</h2>

<h4>Update this Treat: @Html.DisplayFor(model => model.Name)</h4>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (@Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  <input type="submit" value="Update" />
}


<p>@Html.ActionLink("Back to list", "Index")</p> 