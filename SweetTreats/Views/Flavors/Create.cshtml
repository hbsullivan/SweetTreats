@{
  Layout = "_Layout";
}

@model SweetTreats.Models.Flavor

<h4>Add new Flavor</h4>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  <input type="submit" value="Add Flavor" />
}

<p>@Html.ActionLink("Show all Flavors", "Index")</p>